/* 购物车的scss文件 */
$color1: #f60;
$color2: rgb(238, 238, 238);

html,
body {
    background-color: $color2;
}

.cont {
    .head {
        background-color: #fff;
    }

    // 空购物车
    .cart-box {
        width: 7.5rem;
        margin-top: 1.5rem;
        display: none;

        .cart-top {
            width: 7.5rem;
            height: 3.44rem;
            padding-left: .3rem;
            padding-right: .3rem;
            display: flex;
            flex-direction: column;
            align-items: center;

            img {
                width: 1.4rem;
                height: 1.4rem;
                margin-top: 1.4rem;
            }

            p {
                width: 6.9rem;
                height: .38rem;
                margin-top: .2rem;
                font-size: 14px;
                text-align: center;
                color: gray;
            }
        }

        .cart-stroll {
            width: 7.5rem;
            height: 1.6rem;
            display: block;
            display: flex;
            justify-content: center;
            align-items: center;

            p {
                width: 2rem;
                height: .8rem;
                border-radius: .08rem;
                background: #f60;
                line-height: .8rem;
                text-align: center;
                color: #fff;
                font-size: .28rem;
            }

        }

    }

    // 加载数据购物车
    .carts-box {
        width: 7.5rem;

        // 继续购物
        .carts-top {
            width: 7.5rem;
            height: .8rem;
            width: 100%;
            height: .8rem;
            line-height: .8rem;
            border-bottom: .02rem solid #eee;
            background: #fff;
            font-size: .26rem;
            display: flex;
            justify-content: space-between;

            .span1 {
                color: $color1;
                margin-left: .16rem;
            }

            .span2 {
                color: $color1;
                margin-right: .16rem;
            }
        }

        // 加载购物商品
        .carts-middle {
            width: 7.5rem;
            height: 2.12rem;
            padding-top: .2rem;
            padding-bottom: .2rem;
            border-top: .02rem solid rgb(223, 223, 223);
            background: white;
            display: flex;
            align-items: center;

            .dx {
                width: 19px;
                height: 19px;
                border-radius: 19px;
                border: 1px solid #dcdcdc;
                outline: 0;
                margin-right: .2rem;
            }

            .dx2 {
                background: url(../imgs/section9/dui.jpg) center no-repeat #fc7c25;
                background-size: .22rem .16rem;
                border: .02rem solid $color1;
            }

            .img1 {
                width: 1.6rem;
                height: 1.6rem;
                margin-right: .16rem;

                img {
                    width: 1.6rem;
                    height: 1.6rem;
                }
            }

            .carts-right {
                width: 4.96rem;
                height: 1.68rem;
                margin-right: .1rem;

                .carts-details {
                    width: 4.96rem;
                    height: .76rem;

                    a {
                        color: black;
                        font-size: .28rem;
                        overflow: hidden;
                    }

                }

                .no-format {
                    width: .44rem;
                    height: .4rem;
                }

                .carts-price {
                    width: 4.96rem;
                    height: .42rem;
                    display: flex;
                    justify-content: space-between;

                    .mt25 {
                        color: $color1;

                        span {
                            font-size: .32rem;

                            small {
                                font-size: .24rem;
                            }
                        }
                    }

                    .list-opra {
                        width: 2.04rem;
                        height: .44rem;
                        display: flex;

                        a {
                            display: block;
                            width: .7rem;
                            height: .4rem;
                            text-align: center;
                            font-weight: bold;
                            font-size: .28rem;
                        }

                        .number {
                            width: .7rem;
                            height: .4rem;
                            color: #2e2e2e;
                            border: none;
                            outline: 0;
                            background: #f6f6f6;
                            text-align: center;
                        }
                    }
                }
            }
        }

        //省钱提示
        .carts-bottom {
            width: 7.5rem;
            margin-bottom: 1.5rem;
            p {
                width: 7.5rem;
                background: url("../imgs/section9/shengqian.jpg") no-repeat .2rem .22rem;
                background-size: .32rem;
                padding-left: .56rem;
                font-size: .24rem;
                color: #f60;
                padding-top: .2rem;
                border-top: .02rem solid #eee;
                background-color: #fff;
                padding-bottom: .06rem;
            }

            div {
                width: 7.5rem;
                height: .4rem;
                line-height: .4rem;
                padding-left: .1rem;
                font-size: 11px;
                color: gray;
            }

        }

        //结算
        .carts-fiexd {
            background: white;
            width: 7.5rem;
            height: 1.22rem;
            position: fixed;
            left: 0;
            bottom: 0;
            display: flex;
            .carts {
                width: 1.1312rem;
                height: 1.22rem;
                display: flex;
                align-items: center;

                .qx {
                    width: 19px;
                    height: 19px;
                    border-radius: 19px;
                    border: 1px solid #dcdcdc;
                    outline: 0;
                    margin-right: .2rem;
                }

                span {
                    color: gray;
                }
            }

            .sum-box {
                width: 4.3526rem;
                height: 1.22rem;
                padding-top: .16rem;
                padding-right: .225rem;
                display: flex;
                justify-content: flex-end;
                align-items: center;
                span:nth-child(1) {
                    color: gray;
                }
                span:nth-child(3) {
                    color: $color1;
                }
                span:nth-child(4) {
                    color: $color1;
                    font-size: .32rem;
                }
                
            }

            .settle{
                display: block;
                height: .74rem;
                line-height: .74rem;
                font-size: .28rem;
                text-align: center;
                color: #999;
                padding: 0 .34rem;
                background: red;
                border-radius: .6rem;
                color: white;
                margin-top: .26rem;
                margin-right: .2rem;
            }
        }
    }

}

