@charset 'utf-8';
$container: 7.5rem;
@import "./header.scss";
@import "./footer.scss";
body{
    font-size: 0.16rem;
}
.item-common{
    margin-top: 0.30rem;
    background: #ccf6e6;
    padding: 0.30rem 0;
    border-radius: 0.16rem;

    a{
        .big{
            width: 7.05rem; 
            height: 7.05rem;
        }

        p{
            width: 6rem;
            height: 0.84rem;
            margin: 0.20rem auto;
            color: #fff;
            line-height: 0.84rem;
            display: flex;
            justify-content: space-around;

            span{
                font-size: 0.48rem;
            }

            b{
                font-size: 0.24rem;
            }
        }
    }

    a.video1{
        display: block;
        padding: 0 0.20rem;
    }
}
.cont{
    // 5个品牌
    .brand{
        height: 1.4rem;
        background: #980035;
        display: flex;
        justify-content:space-around;
        align-items:content;
        align-content:content;
        border-left: 0.1rem solid #980035;
        border-right: 0.1rem solid #980035;
        img{
            margin-top:0.2rem; 
            width: 1.2826rem;
            height: 1.0184rem;
        }
    }
    .taozhuang{
        .taozhuang-x{
            position: relative;
            .taozhuang-pic{
                position: absolute;
                bottom: 1rem;
                right: 0.15rem;
                display: flex;
                justify-content: space-around;
                flex-wrap: wrap;
                align-items: center;
                width: 2.17rem;
                height: 1.6rem;
                // border: 1px solid #000;
                p{
                    font-size: 0.21rem;
                    color: #ffff00;
                    span{
                        font-size: 0.4rem;
                        font-weight: 700;
                    }
                }
                div{
                    
                    background: #ff0066;
                    border-radius: 0.3rem;
                    width: 2.12rem;
                    height: 0.66rem;
                    text-align: center;
                    line-height: 0.66rem;
                    a{
                        color: #fff;
                        font-size: 0.3rem;
                    }       
                }
            }
        }
    }
}