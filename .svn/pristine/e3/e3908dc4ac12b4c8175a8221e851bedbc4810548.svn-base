.place{
    width: 7.5rem;
    padding: .2rem;
    box-sizing: border-box;
    position: absolute;
    top: 1.58rem;
    bottom: 0;
    background: rgb(243, 243, 243);
    .wbox-flex{
        font-size: .32rem;
        padding-bottom: .2rem;
        
        input{
            width: 5rem;
            height: .42rem;
        }
    }

    .site-box {
        width: 7.1rem;
        height: 2.5rem;
        padding-top: .2rem;
        display: flex;

        p {
            font-size: .32rem;
            width: 1rem;
            height: .42rem;
        }

        .site {
            width: 6rem;
            height: 2.2rem;
            display: flex;
            flex-direction: column;

            select {
                width: 2rem;
                height: .5rem;
                margin-bottom: .2rem;
            }
        }
    }

    .wbox-fle{
        width: 7.1rem;
        height: 1.8rem;
        display: flex;
        .a3{
            display: block;
            width: 1rem;
            height: 1.5rem;
            font-size: .32rem;
        }
        textarea{
            width: 5rem;
            height: 1.4rem;
            margin-top: .04rem;
        }
    }
    .affirm{
        width: 1.5rem;
        height: .7rem;
        font-size: .32rem;
        border-radius: 30px;
        background: rgb(255, 12, 4);
        line-height: .7rem;
        text-align: center;
        a{
            color: black;
        }
    }
}
