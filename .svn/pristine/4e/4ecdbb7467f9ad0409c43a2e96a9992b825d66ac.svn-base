@charset 'utf-8';
$container: 7.5rem;
$themeColor: #ff7f00;

@mixin show-flex {
    display: flex;
    justify-content: center;
    align-items: center;
}

body{
    font-size: 0.16rem;
}

// 页面内容区域开始
.cont{
    width: $container;
    margin: 0 auto;
    .head{
        width: $container;
        height: 0.90rem;
        border-bottom: 0.04rem solid $themeColor;
        display: flex;
        justify-content: space-between;
        .h-left{
            display: flex;
            .aside-nav-toggle{
                width: 0.80rem;
                height: 0.80rem;
                font-size: 0.4rem;
                line-height: 0.80rem;
                text-align: center;
            }
            .logo{
                height: 0.8rem;
                line-height: 0.80rem;
                a{
                    display: inline-block;
                    width: 2.36rem;
                    height: 0.64rem;
                }
                img{
                    vertical-align: middle;
                }
            }
        }
        .h-right{
            display: flex;
            justify-content: flex-end;
            align-items: center;
            a{
                width: 0.6rem;
                height: 0.90rem;
                margin-right: 0.16rem;
                padding-top: 0.10rem;
                .myicon{
                    width: 0.4rem;
                    height: 0.40rem;
                    background: url("../imgs/suit/head_icon.png") no-repeat;
                    background-size: auto 0.40rem;
                }
                .icon_01{
                    background-position: -0.40rem 0;
                }
                .icon_02{
                    background-position: -0.80rem 0;
                }
                span{
                    color: #000;
                    font-size: 0.14rem;
                }
            }
        }
    }

    .bread{
        width: $container;
        height: 0.62rem;
        font-size: 0.24rem;
        border-bottom: 0.02rem solid #ccc;
        .brand-item{
            height: 0.60rem;
            line-height: 0.60rem;
            padding: 0 0.16rem;
            float: left;
        }
        .brand-item a{
            color: #06c;
        }
        .brand-item h1{
            font-weight: bold;
        }
        .split{
            width: 0.30rem;
            background: url("../imgs/suit/head_icon.png") no-repeat;
            background-size: auto 0.60rem;
            background-position: -2.52rem 0;
        }
    }
}
// 页面内容区域结束
